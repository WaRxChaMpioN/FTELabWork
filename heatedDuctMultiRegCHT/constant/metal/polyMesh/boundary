3
(
    frontAndBack
    {
        type            empty;
        inGroups        1(empty);
        nFaces          540;
        startFace       475;
    }
    metal_to_fluid
    {
        type            mappedWall;
        inGroups        1(wall);
        nFaces          90;
        startFace       1015;
        sampleMode      nearestPatchFace;
        sampleRegion    fluid;
        samplePatch     fluid_to_metal;
    }
    metal_to_heater
    {
        type            mappedWall;
        inGroups        1(wall);
        nFaces          40;
        startFace       1105;
        sampleMode      nearestPatchFace;
        sampleRegion    heater;
        samplePatch     heater_to_metal;
    }
)

