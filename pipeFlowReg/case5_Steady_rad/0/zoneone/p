FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/metal";
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type            zeroGradient;
    }
    zoneone_to_zonetwo
    {
        type            mappedMixed;
        field           p;              // optional field name
        value           uniform 0;
        refValue        $value;
        refGradient     uniform 0.0;
        valueFraction   uniform 1.0;
    }
    upperWall
    {
        type            zeroGradient;
    }
    axis
    {
        type            empty;
    }
    front
    {
        type            wedge;
    }
    back
    {
        type            wedge;
    }
}

