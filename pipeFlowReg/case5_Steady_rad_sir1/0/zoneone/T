FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0/zone1";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 0 0 1 0 0 0 ];

internalField   uniform 300;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    inlet
    {
        type            fixedValue;
        value           uniform 343.2; 
    }
    zoneone_to_zonetwo
    {
        type            mappedMixed;
        field           T;              // optional field name
        value           uniform 300;
        refValue        $value;
        refGradient     uniform 0.0;
        valueFraction   uniform 1.0;
    }
    upperWall
    {
        // type            zeroGradient;
        type            fixedValue;
        value           uniform 360;
    }
    axis
    {
        type            empty;
    }
    front
    {
        type            wedge;
    }
    back
    {
        type            wedge;
    }
}

